{
    "clangd": {
        "arguments": [
            "-cross-file-rename",
            "--clang-tidy",
            "--log=verbose"
        ]
    },
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "rootPatterns": ["Cargo.toml"],
            "trace.server": "verbose",
            "filetypes": ["rust", "rs"]
        }
    }
}
